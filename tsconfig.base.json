{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictNullChecks": false,
    "paths": {
      "@guitar/auth": ["libs/auth/src/index.ts"],
      "@guitar/data": ["libs/data/src/index.ts"],
      "@guitar/drums": ["libs/drums/src/index.ts"],
      "@guitar/forms": ["libs/forms/src/index.ts"],
      "@guitar/guitar-tools": ["libs/guitar-tools/src/index.ts"],
      "@guitar/helpers": ["libs/helpers/src/index.ts"],
      "@guitar/interfaces": ["libs/interfaces/src/index.ts"],
      "@guitar/metronome": ["libs/metronome/src/index.ts"],
      "@guitar/setup": ["libs/setup/src/index.ts"],
      "@guitar/store": ["libs/store/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
